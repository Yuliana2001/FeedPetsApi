{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Iniciar servidor",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",      // Cambia esto si tu archivo tiene otro nombre
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}
